<?xml version="1.0"?>
    <config>
        <modules>
            <Chinese_Customer>
                <version>0.1.0</version>
            </Chinese_Customer>
        </modules>
 
        <global>
           <models>
              <customer>
                  <rewrite>
                      <customer>Chinese_Customer_Model_Customer</customer>
                 </rewrite>
              </customer>
           </models>
        </global>
             
    <frontend>
        <routers>
            <customer>
                <args>
                    <modules>
                        <chinese_customer before="Mage_customer">Chinese_Customer</chinese_customer>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>

  </config>