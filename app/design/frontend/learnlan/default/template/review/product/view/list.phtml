<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="comment_number">コメント一覧(<?php echo count($_items)?>)</div>

<div id="comment">
 <div class="comment_view">		      
 <?php if (count($_items)):?>  
           <?php foreach ($_items as $_review):?>
					<div class="face"><img src="<?php echo $this->getSkinUrl('images/face.gif');?>" ></div>
					<div class="comment_content">
			          	<div class="comment_name">
			          	    <?php echo $this->__('<span>%s</span>', $this->escapeHtml($_review->getNickname())) ?>
			          	</div>
			          	
			            <div class="coment_text"> <?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></div>
			          	<div class="comment_day"><?php echo $this->__('(%s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></div>
					</div>
					<div class="comment_line"></div>	
		    <?php endforeach; ?>
		   
 <?php endif;?>
</div>
 <?php echo $this->getChildHtml('review_form') ?>
</div>
				